{% endblock neutron_buttonset_widget %} 

{% block neutron_toggle_button_widget %} 
{% spaceless %}

{% set extra = {
    'id': id,
    'checked_label': configs.checked_label|trans({}, translation_domain),
    'unchecked_label': configs.unchecked_label|trans({}, translation_domain),
} %}

<div> 
    {{ form_widget(form) }}
    <span class="neutron-toggle-button" data-options="{{ configs|merge(extra)|json_encode }}" style="display: none"></span>
</div>
    
{% endspaceless %} 
{% endblock neutron_toggle_button_widget %} 

{% block neutron_plain_widget %} 
{% spaceless %}   
<div>
    <p>{{ value|trans({}, translation_domain)|escape }}</p>
</div>
{% endspaceless %} 
{% endblock neutron_plain_widget %} 

{% block neutron_slider_widget %} 
{% spaceless %} 
<div> 
    {{ form_widget(form, { 'attr': {'style': 'display:none'} }) }}
    <span id="neutron-slider-tpl-{{ id }}" class="neutron-slider-tpl">{{ configs.tpl|trans({}, translation_domain) }}</span>
    <div id="neutron-slider-{{ id }}" {% if configs.width is defined %} style="width:{{ configs.width }}
        {% elseif configs.height is defined %} style="height:{{ configs.height }} 
        {% endif %}" >
    </div>
    <span class="neutron-slider" data-options="{{ configs|merge({'id': id})|json_encode}}" style="display:none"></span>
</div>
{% endspaceless %}
{% endblock neutron_slider_widget %}

